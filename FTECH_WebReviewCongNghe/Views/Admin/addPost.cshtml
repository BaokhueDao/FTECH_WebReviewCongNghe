
@{
    ViewBag.Title = "addPost";
    List<FTECH_WebReviewCongNghe.Models.LOAIBAIDANG> dsLBD = ViewBag.dsLoaiBaiDang;
    List<FTECH_WebReviewCongNghe.Models.DANHMUC> dsDM = ViewBag.dsDanhMuc;
    Layout = null;
}
@{ FTECH_WebReviewCongNghe.Models.TAIKHOAN tk = (FTECH_WebReviewCongNghe.Models.TAIKHOAN)Session["account"]; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Quản lý bài đăng</title>

    <!-- Custom fonts for this template-->
    <link href="~/MySource/admin/vendor/fontawesome-free-6.5.2-web/fontawesome-free-6.5.2-web/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/MySource/admin/css/content-admin.min.css" rel="stylesheet">

</head>

<body>
    <div id="wrapper">
        <ul class="sidebar navbar-nav">
            <img src="~/MySource/img/logo.jpg"> <!-- Hình ảnh mặc định -->
            <li class="nav-item" style="text-align: center; margin-bottom:15px;">
                <a class="nav-link avt" href="~/MySource/admin/#" id="userDropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <img src="~/MySource/img/avt.jpg" class="avatar" alt="Avatar" style="width: 50px; height: 50px; float: left; margin-right: 10px; border-radius: 50%;">
                    <div style="float: left;">
                        <span class="name" style="display: block; font-weight: bold; margin-bottom: 5px;">@tk.HOVATEN</span>
                        <span class="job" style="font-size: smaller;">@tk.CHUCVU.TENCHUCVU</span>
                    </div>
                </a>
            </li>
            <li class="nav-item">

                <a class="nav-link" href="~/Admin/PostManage">
                    <i class="fa-solid fa-file" style="color: #ffffff;"></i>
                    <span>Quản lý bài đăng</span>
                </a>
            </li>
            <li class="nav-item" style="background-color: #CEE2F5;">
                <a class="nav-link" href="~/Admin/addPost">
                    <i class="fa-solid fa-plus" style="color: #121212;"></i>
                    <span style="color: #121212;font-weight: 500;">Thêm bài đăng</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Admin/reviewPost">
                    <i class="fa-solid fa-eye" style="color: #ffffff;"></i>
                    <span>Duyệt bài đăng</span>
                </a>
            </li>
        </ul>

        <div id="content-wrapper" style="margin: 10px;color:#0A5DA9 ;">
            <div class="container-fluid">
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fa-solid fa-bars"></i>
                        <a href="~/Admin/Index" style="text-decoration: none; color: #0A5DA9">
                            Quản lý
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a>

                            Thêm bài đăng
                        </a>
                    </div>
                    <form action="~/Admin/addPost" method="post" enctype="multipart/form-data">
                        <div class="carb mb-2">
                            <div class="row1" style="margin: 20px;display:flex;">
                                <div class="col">
                                    <label for="titleinp" style="margin-bottom: 10px;display: block;">Tiêu đề</label>
                                    <input name="TENBAIVIET" id="titleinp" style="border-radius: 5px;width: 300px;height: 40px;padding: 10px; border: 2px solid #0A5DA9; border-radius: 5px; color: #0A5DA9" ">
                                </div>
                                <div class="col">
                                    <label style="margin-bottom: 10px;display: block;">Loại bài đăng</label>
                                    <div class="customss" style="border:none;background-color:#ffff">
                                        <select class="ss-option" name="MALOAI" required style="width:200px;padding:10px;border:2px solid #0A5DA9;border-radius:5px; color: #0A5DA9">
                                            @foreach (var loaibd in dsLBD)
                                            {
                                                <option value="@loaibd.MALOAI" style="width: 200px; padding: 10px; border: 2px solid #0A5DA9; border-radius: 5px; color: #0A5DA9">@loaibd.LOAIBAIDANG1</option>
                                            }
                                        </select>

                                    </div>
                                </div>
                                <div class="col">
                                    <label for="myfile" style="margin-bottom: 10px;display: block;">Tác giả</label>
                                    <input name="TACGIA" id="TACGIA" style="border: 2px solid #0A5DA9; border-radius: 5px; color: #0A5DA9; width: 150px;height: 40px;" value="@tk.HOVATEN">
                                </div>
                            </div>
                            <div class="row2" style="margin: 20px;display:flex;">
                                <div class="col">
                                    <label style="margin-bottom: 10px;display: block;">Danh mục chính</label>
                                    <div class="customss" background-color:#ffff">

                                        <select class="ss-option" name="MADANHMUC" required style="width:200px;padding:10px;border:2px solid #0A5DA9;border-radius:5px; color: #0A5DA9">
                                            @foreach (var dmuc in dsDM)
                                            {
                                                <option value="@dmuc.MADANHMUC" style="width: 200px; padding: 10px; border: 2px solid #0A5DA9; border-radius: 5px; color: #0A5DA9">@dmuc.TENDANHMUC</option>
                                            }
                                        </select>

                                    </div>


                                </div>
                                <div class="col">
                                    <label for="myfile" style="margin-bottom: 10px;display: block;">File đính kèm</label>
                                    <input type="file" id="myfile" name="myfile" multiple style="border: 2px solid #0A5DA9; border-radius: 5px; color: #0A5DA9; padding: 5px;"><br><br>
                                </div>
                            </div>
                        </div>
                        <div class="content-box-post">
                            <h4 style="font-weight:lighter;font-size: medium;margin-left: 15px;color:#0A5DA9 ;">Nội dung bài đăng</h4>
                            <textarea name="NOIDUNG" id="postdes" cols="30" rows="10" style="margin: 20px;box-sizing: content-box;"></textarea>
                        </div>
                </div>
            </div>

            <div class="button-select">
                <button class="buttonbtn" type="submit">Gửi</button>
                <button class="buttonbtn">Lưu bản nháp</button>
                <button class="buttonbtn">Hủy</button>

            </div>
        </div>
    </div>

</body>
</html>



